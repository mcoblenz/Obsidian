resource contract Money {}

main resource contract Wallet {
	 owned Wallet() {
	 	  ->Empty;
	 }

	 state Full {
	       Money@Owned m;
	 }

	 state Empty {
	 }

	 transaction loseMoney() available in Full, Empty {
	       // Error -- maybe losing Money!
	       ->Empty;
	 }

	 transaction loseMoney(Money@Owned n) {
	       disown n;
	 }
}